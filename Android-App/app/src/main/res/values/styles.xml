
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->

    <style name="Theme.Project_android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="NonSubscribeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/nonSubscribeBackground</item>
        <item name="android:textColor">@color/oppositeOfBackground</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="SubscribeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/subscribeBackground</item>
        <item name="android:textColor">@color/subscribeTextColor</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/search_view_background</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dialog_button_color</item>
        <item name="android:textColorPrimary">@color/dialog_button_color</item>
    </style>



</resources>

